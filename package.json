{
  "name": "workers-mcp-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:worker": "tsx scripts/build.ts",
    "deploy:worker": "pnpm build:worker && pnpm generate:docs && wrangler deploy",
    "tail:worker": "wrangler tail",
    "install:claude": "tsx scripts/install.ts",
    "update:secret": "wrangler secret put SHARED_SECRET <generated/.shared-secret",
    "generate:docs": "tsx scripts/parse.ts src/index.ts > generated/docs.json",
    "generate:docs:watch": "watchexec -c -w src -w scripts pnpm generate:docs",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "vitest",
    "types": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.2",
    "@cloudflare/workers-types": "^4.20241202.0",
    "@modelcontextprotocol/inspector": "^0.2.7",
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@types/node": "^22.10.1",
    "@types/which": "^3.0.4",
    "chalk": "^5.3.0",
    "confbox": "^0.1.8",
    "jsdoc-api": "^9.3.4",
    "just-index": "^4.2.0",
    "mimetext": "^3.0.24",
    "ts-blank-space": "^0.4.4",
    "tsx": "^4.19.2",
    "typescript": "^5.5.2",
    "vitest": "2.0.5",
    "wrangler": "^3.60.3"
  }
}
